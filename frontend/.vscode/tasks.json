{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start ngrok",
      "type": "shell",
      "command": "ngrok http 3000 --domain epiglottal-nebuly-liz.ngrok-free.dev", // Adjust port 3000 if your Next.js app runs on a different port
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "instanceLimit": 1
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          // ngrok's output indicating it's ready:
          "beginsPattern": "Tunnel session started on", 
          // ngrok never 'ends' until killed, so we use a pattern it hits early
          "endsPattern": "starting web service.*|online session established" 
        }
      }
    },
    {
      "label": "Launch Chrome for Debugging",
      "type": "shell",
      "command": "",
      "windows": {        
        "command": "taskkill /im chrome.exe /f ; & 'C:/Program Files/Google/Chrome/Application/chrome.exe' --remote-debugging-port=9222 --user-data-dir=\"C:\\Temp\\chrome-debug-profile\""
      },
      "osx": {
        "command": "killall 'Google Chrome' ; /Applications/Google\\ Chrome.app/Contents/MacOS/Google\\ Chrome --remote-debugging-port=9222 --user-data-dir=\"/Users/brentedwards/GoogleChromeDebugUser\""
      },
      "linux": {
        "command": "killall chrome ; google-chrome --remote-debugging-port=9222 --user-data-dir=\"/tmp/chrome-debug-profile\""
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "isBackground": true
    },
    {
      "label": "Restart Next.js Server",
      "type": "shell",
      "command": "clear && npx kill-port 3000 && npm run dev",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}